{
  "name": "DEVHUB-PROJ-002",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "forwardPorts": [10021],
  "runArgs": [
    "--env-file",
    ".env"
  ],
  "postStartCommand": "./scripts/dev",
  "containerEnv": {
    "HABIT_LOG_HOST": "0.0.0.0",
    "HABIT_LOG_PORT": "10021",
    "HABIT_LOG_DB_PATH": "${containerWorkspaceFolder}/.data/habit-log.db",
    "HABIT_LOG_SECRET_KEY": "dev-secret-key-change-me",
    "PYTHONPATH": "${containerWorkspaceFolder}/src"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
